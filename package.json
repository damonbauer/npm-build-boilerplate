{
  "name": "npm-app",
  "version": "1.0.0",
  "description": "Template based on NPM scripts.",
  "author": "Damon Bauer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damonbauer/npm-build-boilerplate"
  },
  "bugs": "https://github.com/damonbauer/npm-build-boilerplate/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "gulp": "gulp",
    "favicon-generate": "real-favicon generate faviconDescription.json faviconData.json dist/icons/",
    "favicon-html": "real-favicon inject faviconData.json dist dist/*.html",
    "favicon-update": "real-favicon check-for-update --fail-on-update faviconData.json",
    "copy": "mkdirp dist/js/vendor -p && mkdirp dist/css/vendor -p && run-s vendor_css vendor_js",
    "vendor_favs": "copyfiles -f dist/icons/*.{json,xml} dist/",
    "vendor_css": "copyfiles -f node_modules/bootstrap-select/dist/css/bootstrap-select.min.css dist/css/vendor",
    "vendor_js": "copyfiles -f node_modules/html5shiv/dist/html5shiv.min.js app/js/respond.min.js app/js/bootstrap-fixes.js node_modules/jquery/dist/jquery.min.js node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js node_modules/bootstrap-select/dist/js/bootstrap-select.min.js dist/js/vendor",
    "vendor_fonts": "copyfiles -f node_modules/font-awesome/fonts/**/*.* node_modules/bootstrap-sass/assets/fonts/bootstrap/**/*.* dist/fonts",
    "scss": "node-sass --output-style compressed -o dist/css app/sass",
    "lint-scss": "stylelint app/sass/**/*.scss --syntax scss || true",
    "autoprefixer": "postcss --no-map -u autoprefixer -r dist/css/*.css",
    "styles": "run-s lint-scss scss autoprefixer",
    "lint": "eslint app/js/custom.js || true",
    "uglify": "mkdirp dist/js -p && uglifyjs app/js/custom.js -c -o dist/js/custom.js",
    "scripts": "run-s lint uglify",
    "icons": "svgo -f app/images/icons -o dist/images/icons && svg-sprite-generate -d app/images/icons -o dist/images/sprite.svg",
    "images": "imagemin --plugin=pngquant app/images/* -o dist/images && run-s icons",
    "fonts": "mkdirp dist/fonts -p && run-s vendor_fonts",
    "beautify": "js-beautify -qrtf ./dist/*.html",
    "bootlint": "bootlint ./dist/*.html || true",
    "html": "pug --pretty app/pug/pages/*.pug -o dist && run-s favicon-html bootlint beautify",
    "serve": "browser-sync start --server --serveStatic dist --files \"dist/css/*.css, dist/js/*.js, **/*.html, app/pug/pages/*.pug, dist/images/*.*, !node_modules\"",
    "all": "run-s clean copy favicon-generate vendor_favs html styles scripts images fonts gulp watch",
    "watch:css": "onchange \"app/sass\" -- run-s styles",
    "watch:js": "onchange \"app/js\" -- run-s scripts",
    "watch:html": "onchange \"app/pug/_includes\" \"app/pug/_layouts\" \"app/pug/_partials\" \"app/pug/pages\" -- run-s html",
    "watch:images": "onchange \"app/images\" -- run-s images",
    "watch:fonts": "onchange \"dist/fonts\" -- run-s fonts",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s all"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "bootlint": "^0.14.2",
    "bootstrap-sass": "^3.3.7",
    "bootstrap-select": "^1.12.2",
    "browser-sync": "^2.13.0",
    "cli-real-favicon": "0.0.6",
    "copyfiles": "^1.2.0",
    "eslint": "^3.18.0",
    "font-awesome": "^4.7.0",
    "gulp": "^3.9.1",
    "gulp-google-webfonts": "0.0.14",
    "gulp-humans": "^2.0.2",
    "gulp-robots": "^2.0.4",
    "html5shiv": "^3.7.3",
    "imagemin-cli": "^3.0.0",
    "imagemin-pngquant": "^5.0.0",
    "jquery": "^3.2.1",
    "js-beautify": "^1.6.12",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "stylelint": "^7.9.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2",
    "uglify-js": "^2.8.15"
  }
}
